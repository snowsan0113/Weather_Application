<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D7D7"
    android:elevation="20dp"
    tools:context=".activity.WeatherHomeActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/weather_location_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3017B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="#FFFFFF"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabTextColor="#FFFFFF">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/now_location_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="現在位置 \n " />

    </com.google.android.material.tabs.TabLayout>

    <ScrollView
        android:id="@+id/home_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_bottom_button_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_location_tabLayout">

        <LinearLayout
            android:id="@+id/home_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/weather_fragment_view"
                    android:name="snowsan0113.weather_app.android.fragment.WeatherFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_weather" />

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1000dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/home_bottom_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="メニュー"
            android:textColor="#353232"
            android:textSize="12sp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="0dp"
            app:icon="@drawable/menu_icon"
            app:iconGravity="textTop"
            app:iconPadding="4dp"
            app:iconSize="15dp"
            app:iconTint="#383636"
            app:rippleColor="#B4B3B3"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="266dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="検索"
            android:textColor="#353232"
            android:textSize="12sp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="0dp"
            app:icon="@drawable/search_icon"
            app:iconGravity="textTop"
            app:iconPadding="4dp"
            app:iconSize="15dp"
            app:iconTint="#353232"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="266dp" />
    </com.google.android.material.button.MaterialButtonToggleGroup>


</androidx.constraintlayout.widget.ConstraintLayout>